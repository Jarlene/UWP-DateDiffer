<Application
    x:Class="DateDiffer.App"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:DateDiffer"
    xmlns:viewModel="using:DateDiffer.ViewModel"
    xmlns:converters="using:Edi.UWP.Helpers.Converters"
    RequestedTheme="Light">
    <Application.Resources>
        <viewModel:ViewModelLocator x:Key="Locator" xmlns:vm="using:DateDiffer.ViewModel" />
        <converters:DateTimeToOffsetConverter x:Key="DateTimeToOffsetConverter" />
        <converters:StringFormatConverter x:Key="StringFormatConverter" />
        <converters:BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter" />
    </Application.Resources>
</Application>
