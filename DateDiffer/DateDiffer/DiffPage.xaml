                <TextBlock Grid.Row="3" 
                           Margin="0,10,0,0"
                           FontSize="26"
                           TextWrapping="Wrap"
                           Foreground="#009933"
                           Text="{Binding DiffResult, Mode=TwoWay}" />

            </Grid>
        </Grid>
    </Grid>
</Page>
